<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldCyan([%d{HH:mm:ss.SSS}]) %boldYellow([%thread]) %highlight(%-5level) %boldMagenta(%logger{26}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
